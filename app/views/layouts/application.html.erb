<!DOCTYPE html>
<html>
  <head>
    <title>ChessPrep</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application'%>
    <%= yield :js %>
  </head>

  <body>
    <div class="container">
      <div class="header">
        <h1>ChessPrep</h1>
        <div id="login">
          <% if current_user %>
            <%= link_to "Logout", '/logout' %>
          <% end %>
        </div>
      </div>
      <%= yield %>
    </div>
  </body>
</html>
